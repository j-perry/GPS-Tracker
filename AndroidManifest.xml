<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.team2.dash"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" />

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="14" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <uses-library
            android:name="com.google.android.maps"
            android:required="true" />

        <activity
            android:name="com.team2.dash.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.team2.dash.TestActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.team2.dash.UserActivity"
            android:label="@string/title_activity_user" >
        </activity>
        <activity
            android:name="com.team2.dash.AddUserActivity"
            android:label="@string/title_activity_add_user" >
        </activity>
        <activity
            android:name="com.team2.dash.RouteMap"
            android:label="@string/title_activity_route_map" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.google.android.maps.MapActivity" />
        </activity>
        <activity
            android:name="com.team2.dash.WorkoutActivity"
            android:label="@string/title_activity_workout" >
        </activity>
        <activity
            android:name="com.team2.dash.LocationActivity"
            android:label="@string/title_activity_location" >
        </activity>
        <activity
            android:name="com.team2.dash.Tracker"
            android:label="@string/title_activity_tracker" >
        </activity>
        <activity
            android:name="com.team2.dash.TrackerActivity"
            android:label="@string/title_activity_tracker" >
        </activity>
        <activity
            android:name="com.team2.dash.CheckIn"
            android:label="@string/title_activity_check_in" >
        </activity>
        <activity
            android:name="com.team2.dash.VenueActivity"
            android:label="@string/title_activity_venue" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.team2.dash.CheckIn" />
        </activity>
        <activity
            android:name="com.team2.dash.AddReview"
            android:label="@string/title_activity_add_review" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.team2.dash.VenueActivity" />
        </activity>
        <activity
            android:name="com.team2.dash.FollowActivity"
            android:label="@string/title_activity_follow" >
        </activity>
        <activity
            android:name="com.team2.dash.FetchFollowActivity"
            android:label="@string/title_activity_user_follow" >
        </activity>
        <activity
            android:name="com.team2.dash.UserCheckins"
            android:label="@string/title_activity_user_checkins" >
        </activity>
    </application>

</manifest>