<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Previous Runs List View (by month) -->
    <ListView 
        android:id="@+id/prev_runs_monthly_list"
        android:background="#E2E2E2"
        android:layout_height="match_parent"
        android:layout_width="match_parent" />
                   
    <!-- Previous Runs (by day for each individual month) 
    	 ... may not necessarily be required
    -->
    <ListView 
        android:id="@+id/prev_runs_monthly_day_list"
        android:layout_height="match_parent"
        android:layout_width="match_parent" />
              
    <!-- Displays the Month -->

    <TextView
        android:id="@+id/month"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#39F"
        android:textColor="#FFF" />
    
    <!-- Run Entry Layout (groups data TextViews) - 
    	 acts as a sub-item	
    -->

    <LinearLayout
        android:id="@+id/run_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="#222"
        android:textColor="#FFF" />

    </LinearLayout>